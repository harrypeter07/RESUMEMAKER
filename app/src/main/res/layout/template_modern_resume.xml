<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Section -->
        <LinearLayout
            style="@style/ResumeHeader"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nameText"
                style="@style/ResumeHeaderName"
                android:text="John Doe" />

            <TextView
                android:id="@+id/titleText"
                style="@style/ResumeHeaderTitle"
                android:text="Software Engineer" />
        </LinearLayout>

        <!-- Main Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:padding="16dp">

            <!-- Left Column (1/3 width) -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Contact Section -->
                <LinearLayout style="@style/ResumeSection">
                    <TextView
                        style="@style/ResumeSectionTitle"
                        android:text="Contact" />

                    <TextView
                        android:id="@+id/emailText"
                        style="@style/ResumeContactInfo"
                        android:drawableStart="@android:drawable/ic_dialog_email"
                        android:text="john.doe@email.com" />

                    <TextView
                        android:id="@+id/phoneText"
                        style="@style/ResumeContactInfo"
                        android:drawableStart="@android:drawable/ic_menu_call"
                        android:text="+1 234 567 890" />

                    <TextView
                        android:id="@+id/locationText"
                        style="@style/ResumeContactInfo"
                        android:drawableStart="@android:drawable/ic_menu_mylocation"
                        android:text="New York, NY" />

                    <TextView
                        android:id="@+id/linkedinText"
                        style="@style/ResumeContactInfo"
                        android:drawableStart="@android:drawable/ic_menu_share"
                        android:text="linkedin.com/in/johndoe" />
                </LinearLayout>

                <!-- Skills Section -->
                <LinearLayout style="@style/ResumeSection">
                    <TextView
                        style="@style/ResumeSectionTitle"
                        android:text="Skills" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/skillsChipGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:chipSpacingHorizontal="4dp"
                        app:chipSpacingVertical="4dp" />
                </LinearLayout>

                <!-- Languages Section -->
                <LinearLayout style="@style/ResumeSection">
                    <TextView
                        style="@style/ResumeSectionTitle"
                        android:text="Languages" />

                    <TextView
                        android:id="@+id/languagesText"
                        style="@style/ResumeContactInfo"
                        android:text="English (Native)\nSpanish (Fluent)" />
                </LinearLayout>
            </LinearLayout>

            <!-- Right Column (2/3 width) -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">

                <!-- Summary Section -->
                <LinearLayout style="@style/ResumeSection">
                    <TextView
                        style="@style/ResumeSectionTitle"
                        android:text="Professional Summary" />

                    <TextView
                        android:id="@+id/summaryText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="4dp"
                        android:textColor="@color/on_surface" />
                </LinearLayout>

                <!-- Experience Section -->
                <LinearLayout style="@style/ResumeSection">
                    <TextView
                        style="@style/ResumeSectionTitle"
                        android:text="Work Experience" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/experienceRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false" />
                </LinearLayout>

                <!-- Education Section -->
                <LinearLayout style="@style/ResumeSection">
                    <TextView
                        style="@style/ResumeSectionTitle"
                        android:text="Education" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/educationRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false" />
                </LinearLayout>

                <!-- Certifications Section -->
                <LinearLayout style="@style/ResumeSection">
                    <TextView
                        style="@style/ResumeSectionTitle"
                        android:text="Certifications" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/certificationsRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView> 